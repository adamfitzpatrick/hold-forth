<!DOCTYPE html>
<html lang="en">
    <head>
        <base href="/">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{{ htmlWebpackPlugin.options.title }}</title>
        {{#each htmlWebpackPlugin.options.cdnResources.fonts }}<link href="{{ this }}" rel="stylesheet" type="text/css"/>{{/each}}
        {{#each htmlWebpackPlugin.options.cdnResources.css }}<link href="{{ this }}" rel="stylesheet" type="text/css"/>{{/each}}
    </head>
    <body>
        <app-root>
            <div class="loader">
                <div class="loader__circle"></div>
                <div class="loader__logo">{{{ htmlWebpackPlugin.options.logo }}}</div>
            </div>
        </app-root>
        {{#each htmlWebpackPlugin.options.cdnResources.js }}<script type="application/javascript" src="{{ this }}"></script>{{/each}}
    </body>
</html>